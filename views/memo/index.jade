extends ../layout


block content
  if(user)
  p login as userId: #{user.id}
    br
    a(href="/memo/new") New Memo
    br
    table.table-striped.table.table-bordered
     tr
        th UserID
        th Title
        th Text
        th Action
      each memo in memos
       tr
          td=memo.userId
          td=memo.title
          td=memo.text
          td
            a(href='/memo/edit/'+memo._id) Edit
            &nbsp;
            a(href='/memo/'+memo._id) Delete
  if(! user)
    p please login          
